.container
  .row.item-control-links
    .span3.offset9
      = link_to edit_language_author_path(@author.language, @author), class: 'btn' do
        %i.icon-edit
        edit

  .row
    .span2
      = image_tag @author.profile_pictures.last.image.url(:medium), class: 'img-polaroid'

    .span8.item-information-section
      %h4= @author.name

      %h5 Books

      %ul.associated-books-list
        - @author.books.each do |book|
          %li
            %i.icon-book
            = link_to language_book_path(book.language, book) do
              = book.title
              = "  (#{book.year})" if book.year