.container
  .row.item-control-links
    .span3.offset9
      = link_to edit_language_author_path(@author.language, @author), class: 'btn' do
        %i.icon-edit
        edit

  .row
    .span2
      = image_tag author_profile_picture(@author), class: 'img-polaroid'

    .span8.item-information-section
      %h4= @author.name

      %h5= "Books (#{@author.books.count})"

      %ul.associated-books-list
        - @author.books.first(10).each do |book|
          %li
            %i.icon-book
            = link_to language_book_path(book.language, book) do
              = formatted_name book

        - if @author.books.count > 10
          %li
            %br
            %i.icon-list-ul
            = link_to 'more..', books_language_author_path(@author.language, @author)