.edit-item
  %p
    .row
      %code.span2.edit-attribute= edit.editable_type
      .span8
        = link_to edit.editable.grandham_id, send("language_#{edit.editable_type.downcase}_path", edit.editable.language, edit.editable), target: '_blank'
  %p
    .row
      %code.span2.edit-attribute= "#{edit.field.capitalize} (old)"
      .span8
        = edit.old_value

  %p
    .row
      %code.span2.edit-attribute= "#{edit.field.capitalize} (new)"
      .span8
        = edit.new_value

  .pull-right
    %p
      Submitted by
      = link_to 'Radha', '#'
      on
      = edit.created_at.strftime('%e %b %Y (%I:%M %p)')
      - if defined? show_perma_link
        |
        = link_to "Review ##{edit.id}", language_admin_review_path(language_id: current_language, id: edit)
  %br

  .form-actions
    = link_to 'Approve', approve_language_admin_review_path(language_id: current_language, id: edit), class: 'btn btn-success', method: :post
    = link_to 'Discard', discard_language_admin_review_path(language_id: current_language, id: edit), class: 'btn btn-primary', method: :post
    = link_to 'Comments (5)', '#', class: 'btn btn-info'