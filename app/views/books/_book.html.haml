.media.grandham-list-item
  %a.pull-left{href: "#"}
    %img.media-object.grandham-list.img-thumbnail{alt: "...", src: book_cover_picture(book)}/
  .media-body
    %h4.media-heading
      = link_to book.title, language_book_path(book.language, book)

    %p
      = raw book.authors.collect{ |a| link_to a.name, language_author_path(a.language, a) }.join(',')