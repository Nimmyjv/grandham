%li.book-list-item
  .row
    .span1
      .list-item-book-cover
        = image_tag book.book_covers.first.image.url(:medium), class: 'img-polaroid'
    .span6
      %h4.list-book-title
        = link_to book.title, language_book_path(book.language, book)

      %p
        = link_to book.authors.first.name, language_authors_path(book.authors.first.language, book.authors.first)
        = ", ..." if book.authors.count > 1