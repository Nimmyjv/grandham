= form_for @book do |f|
  - if @book.errors.any?
    #error_explanation
      %h2= "#{pluralize(@book.errors.count, "error")} prohibited this book from being saved:"
      %ul
        - @book.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :grandham_id
    = f.text_field :grandham_id
  .field
    = f.label :language_id
    = f.number_field :language_id
  .actions
    = f.submit 'Save'
