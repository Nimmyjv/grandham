.container
  %br
  .row
    .col-md-10.col-offset-2
      %h2 Sign in
      .row

        .col-md-6.sign-in-container
          = simple_form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f|
            .form-inputs
              = f.input :email, :required => false, :autofocus => true
              = f.input :password, :required => false
              = f.input :remember_me, :as => :boolean, inline_label: 'Remember me', label: false if devise_mapping.rememberable?
            = f.button :submit, "Sign in", class: 'btn btn-primary'

          %br
          = render "devise/shared/links"

        .col-md-4.social-sign-in-container
          %p
            Doesn't have an account?
            = link_to 'Register', new_user_registration_path